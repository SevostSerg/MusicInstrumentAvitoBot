<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>AvitoTelegramBot</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Serilog" Version="2.12.0" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="3.1.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="7.0.0" />
  </ItemGroup>
	<Target Name="CopyCustomContent" AfterTargets="AfterBuild">
		<Copy SourceFiles="AcousticGuitarSamples.txt" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="BassGuitarSamples.txt" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="ChatIDs.txt" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="ClassicGuitarSamples.txt" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="ElectricGuitarSamples.txt" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="FolkSamples.txt" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="IDontCareSamples.txt" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles=".botIgnore" DestinationFolder="$(OutDir)" />

		<Copy SourceFiles="BrandConfigurations/Ashtone.json" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="BrandConfigurations/CheapShit.json" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="BrandConfigurations/Cort.json" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="BrandConfigurations/Cremona.json" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="BrandConfigurations/Flight.json" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="BrandConfigurations/Hohner.json" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="BrandConfigurations/Ibanez.json" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="BrandConfigurations/Squier.json" DestinationFolder="$(OutDir)" />
		<Copy SourceFiles="BrandConfigurations/Yamaha.json" DestinationFolder="$(OutDir)" />
	</Target>

</Project>
